---
# See https://web.dev/add-manifest/
---

{
  "short_name": "{{ site.short_title }}",
  "name": "{{ site.title }}",
  "icons": [
    {
      "src": "{% link /assets/img/icon.svg %}",
      "type": "image/svg+xml",
      "sizes": "340x340"
    },
    {
      "src": "{% link /assets/img/icon-192.png %}",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "{% link /assets/img/icon-512.png %}",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  "start_url": "{{ '/' | relative_url }}?utm_source=homescreen",
  "background_color": "#fafafa",
  "display": "standalone",
  "theme_color": "#fafafa"
}
